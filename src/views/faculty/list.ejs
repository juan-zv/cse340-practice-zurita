<%- include('../partials/header') %>
<main>
    <h1>Faculty Directory</h1>
    <p>Browse our faculty members and click on any name to view their contact information and details.</p>

    <div class="sort-options">
        <span>Sort by: </span>
        <a href="/faculty?sortBy=name" class="<%= sortBy === 'name' ? 'active' : '' %>">Name</a>
        <a href="/faculty?sortBy=department" class="<%= sortBy === 'department' ? 'active' : '' %>">Department</a>
        <a href="/faculty?sortBy=title" class="<%= sortBy === 'title' ? 'active' : '' %>">Title</a>
    </div>

    <div class="faculty-list">
        <% facultyMembers.forEach(member => { %>
            <div class="faculty-card">
                <h3><a href="/faculty/<%= member.slug %>"><%= member.name %></a></h3>
                <p class="faculty-title"><%= member.title %></p>
                <p class="faculty-department"><%= member.department %></p>
            </div>
        <% }); %>
    </div>
</main>

<%- include('../partials/footer') %>